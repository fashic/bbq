<h2 class="buffer-both" >Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal col-6'}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field  :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= f.label :Пароль %>
    <% if @minimum_password_length %>
    <em>(минимум <%= @minimum_password_length %> символов)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control'%>
  </div>

  <div class="field">
    <%= f.label :Подтверждение_пароля %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="actions buffer-both">
    <%= f.submit "Зарегистрироваться", class: 'btn btn-success'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

